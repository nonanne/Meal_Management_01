<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="ユーザー名"
        app:layout_constraintEnd_toStartOf="@+id/useridForm"
        app:layout_constraintTop_toTopOf="@+id/useridForm" />

    <TextView
        android:id="@+id/useridForm"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="fill"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/grid_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="31dp"
        android:text="目的"
        app:layout_constraintBottom_toTopOf="@+id/sex"
        app:layout_constraintEnd_toStartOf="@+id/purposeForm"
        app:layout_constraintTop_toTopOf="@+id/purposeForm" />

    <TextView
        android:id="@+id/purposeForm"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="fill"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useridForm" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="性別"
        app:layout_constraintEnd_toStartOf="@+id/sexForm"
        app:layout_constraintTop_toTopOf="@+id/sexForm" />

    <TextView
        android:id="@+id/sexForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill"
        android:background="@drawable/grid_border"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purposeForm" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="年齢"
        app:layout_constraintEnd_toStartOf="@+id/ageForm"
        app:layout_constraintTop_toTopOf="@+id/ageForm" />

    <TextView
        android:id="@+id/ageForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexForm" />

    <TextView
        android:id="@+id/歳"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="歳"
        app:layout_constraintStart_toEndOf="@+id/ageForm"
        app:layout_constraintTop_toTopOf="@+id/ageForm" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="体重"
        app:layout_constraintEnd_toStartOf="@+id/weightForm"
        app:layout_constraintTop_toTopOf="@+id/weightForm" />

    <TextView
        android:id="@+id/weightForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightForm" />


    <TextView
        android:id="@+id/kg"
        android:layout_width="29dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="kg"
        app:layout_constraintStart_toEndOf="@+id/weightForm"
        app:layout_constraintTop_toTopOf="@+id/weightForm" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="身長"
        app:layout_constraintEnd_toStartOf="@+id/heightForm"
        app:layout_constraintTop_toTopOf="@+id/heightForm" />

    <TextView
        android:id="@+id/heightForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageForm" />

    <TextView
        android:id="@+id/cm"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="cm"
        app:layout_constraintStart_toEndOf="@+id/heightForm"
        app:layout_constraintTop_toTopOf="@+id/heightForm" />

    <TextView
        android:id="@+id/活動レベル"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="活動レベル"
        app:layout_constraintEnd_toStartOf="@+id/activityLevelForm"
        app:layout_constraintTop_toTopOf="@+id/activityLevelForm" />

    <TextView
        android:id="@+id/activityLevelForm"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="fill"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightForm" />

    <GridLayout
        android:id="@+id/oneDayNeedEiyou"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="fill"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border1"
            android:gravity="center"
            android:text="栄養素"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border1"
            android:gravity="center"
            android:text="1日に必要な栄養素"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/calorie"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="カロリー" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="タンパク質" />

        <TextView
            android:id="@+id/carbon"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="炭水化物" />

        <TextView
            android:id="@+id/fat"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:background="@drawable/grid_border"
            android:gravity="center"
            android:text="脂質" />

        <TextView
            android:id="@+id/calorieForm"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/proteinForm"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/carbonForm"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

        <TextView
            android:id="@+id/fatForm"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:background="@drawable/grid_border"
            android:gravity="center" />

    </GridLayout>

    <Button
        android:id="@+id/kojin"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="188dp"
        android:text="個人"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/toSyokuziButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="188dp"
        android:text="食事"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="編集"
        app:layout_constraintBottom_toTopOf="@+id/oneDayNeedEiyou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLevelForm" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:background="#fff"
        android:layout_width="400dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu"
        />

    <fragment
        android:id="@+id/fragment2"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="427dp"
        android:layout_height="732dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:navGraph="@navigation/my_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>