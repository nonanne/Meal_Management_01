<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodUpdateActivity">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="100dp"
        android:text="戻る"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="食品名"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/updateFoodEdit"
        app:layout_constraintTop_toTopOf="@+id/updateFoodEdit" />

    <EditText
        android:id="@+id/updateFoodEdit"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="量"
        android:inputType="numberDecimal"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/foodGram"
        app:layout_constraintTop_toTopOf="@+id/foodGram" />

    <EditText
        android:id="@+id/foodGram"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateFoodEdit" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="カロリー"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/updateCalorie"
        app:layout_constraintTop_toTopOf="@+id/updateCalorie" />

    <EditText
        android:id="@+id/updateCalorie"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGram" />

    <EditText
        android:id="@+id/updateProtain"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateCalorie" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="タンパク質"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/updateProtain"
        app:layout_constraintTop_toTopOf="@+id/updateProtain" />

    <EditText
        android:id="@+id/updateCarbon"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateProtain" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="炭水化物"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/updateCarbon"
        app:layout_constraintTop_toTopOf="@+id/updateCarbon" />

    <EditText
        android:id="@+id/updateFat"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:gravity="center"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateCarbon" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="脂質"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/updateFat"
        app:layout_constraintTop_toTopOf="@+id/updateFat" />

    <Button
        android:id="@+id/foodUpdatebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="100dp"
        android:text="更新"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/button_shape3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="cal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/updateCalorie"
        app:layout_constraintStart_toEndOf="@+id/updateCalorie" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="g"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/updateProtain"
        app:layout_constraintStart_toEndOf="@+id/updateProtain" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="g"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/updateCarbon"
        app:layout_constraintStart_toEndOf="@+id/updateCarbon" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="g"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/updateFat"
        app:layout_constraintStart_toEndOf="@+id/updateFat" />

</androidx.constraintlayout.widget.ConstraintLayout>