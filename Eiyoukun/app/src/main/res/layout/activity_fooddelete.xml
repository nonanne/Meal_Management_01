<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDeleteActivity">

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="100dp"
        android:text="戻る"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="食品名"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/deleteFood"
        app:layout_constraintTop_toTopOf="@+id/deleteFood" />

    <TextView
        android:id="@+id/deleteFood"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="カロリー"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/deleteCalorie"
        app:layout_constraintTop_toTopOf="@+id/deleteCalorie" />

    <TextView
        android:id="@+id/deleteCalorie"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodGram" />

    <TextView
        android:id="@+id/deleteProtain"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteCalorie" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="タンパク質"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/deleteProtain"
        app:layout_constraintTop_toTopOf="@+id/deleteProtain" />

    <TextView
        android:id="@+id/deleteCarbon"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteProtain" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="炭水化物"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/deleteCarbon"
        app:layout_constraintTop_toTopOf="@+id/deleteCarbon" />

    <TextView
        android:id="@+id/deleteFat"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteCarbon" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="脂質"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/deleteFat"
        app:layout_constraintTop_toTopOf="@+id/deleteFat" />

    <Button
        android:id="@+id/foodDeletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="100dp"
        android:text="削除"
        android:background="@drawable/button_shape"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="cal"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/deleteCalorie"
        app:layout_constraintStart_toEndOf="@+id/deleteCalorie" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="g"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/deleteProtain"
        app:layout_constraintStart_toEndOf="@+id/deleteProtain" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="g"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/deleteCarbon"
        app:layout_constraintStart_toEndOf="@+id/deleteCarbon" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="g"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/deleteFat"
        app:layout_constraintStart_toEndOf="@+id/deleteFat" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:text="量"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/foodGram"
        app:layout_constraintTop_toTopOf="@+id/foodGram" />

    <TextView
        android:id="@+id/foodGram"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteFood" />


</androidx.constraintlayout.widget.ConstraintLayout>