<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistActivity">

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="ユーザー名"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/useridForm"
        app:layout_constraintTop_toTopOf="@+id/useridForm" />

    <EditText
        android:id="@+id/useridForm"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="fill"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="100dp"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="31dp"
        android:text="目的"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/sex"
        app:layout_constraintEnd_toStartOf="@+id/spinnerPurpose"
        app:layout_constraintTop_toTopOf="@+id/spinnerPurpose" />

    <Spinner
        android:id="@+id/spinnerPurpose"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="fill"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:entries="@array/list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useridForm" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="性別"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spinnerSex"
        app:layout_constraintTop_toTopOf="@+id/spinnerSex" />

    <Spinner
        android:id="@+id/spinnerSex"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:entries="@array/list1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPurpose" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="年齢"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ageForm"
        app:layout_constraintTop_toTopOf="@+id/ageForm" />

    <EditText
        android:id="@+id/ageForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSex" />

    <TextView
        android:id="@+id/歳"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="歳"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ageForm"
        app:layout_constraintTop_toTopOf="@+id/ageForm" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="体重"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/weightForm"
        app:layout_constraintTop_toTopOf="@+id/weightForm" />

    <EditText
        android:id="@+id/weightForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"

        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightForm" />

    <TextView
        android:id="@+id/kg"
        android:layout_width="23dp"
        android:layout_height="21dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="kg"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/weightForm"
        app:layout_constraintTop_toTopOf="@+id/weightForm" />

    <TextView
        android:id="@+id/活動レベル"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="活動レベル"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/activityLevelForm"
        app:layout_constraintTop_toTopOf="@+id/activityLevelForm" />

    <Spinner
        android:id="@+id/activityLevelForm"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="25dp"
        android:elevation="3dp"
        android:background="@drawable/grid_border"
        android:textStyle="bold"
        android:entries="@array/list2"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightForm" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="身長"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/heightForm"
        app:layout_constraintTop_toTopOf="@+id/heightForm" />

    <EditText
        android:id="@+id/heightForm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="center"
        android:elevation="3dp"
        android:background="@drawable/grid_border"

        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageForm" />

    <TextView
        android:id="@+id/cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="cm"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/heightForm"
        app:layout_constraintTop_toTopOf="@+id/heightForm" />

    <Button
        android:id="@+id/registButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="登録"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/button_shape"
        app:layout_constraintBottom_toTopOf="@+id/oneDayNeedEiyou"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLevelForm" />

    <Button
        android:id="@+id/registStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:text="戻る"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityLevelForm" />

</androidx.constraintlayout.widget.ConstraintLayout>